{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Spring Boot JAR (no build)",
            "request": "launch",
            "mainClass": "org.springframework.boot.loader.JarLauncher",
            "args": "",
            // Do not let VS Code build the project. The JAR must be produced externally by ./gradlew build.
            "classPaths": [
                "${workspaceFolder}/sample-apps/springboot/build/libs/springboot-2.21.0-SNAPSHOT.jar"
            ],
            // Note: do NOT set a JDWP agent here if VS Code will launch the JVM with debugging enabled,
            // otherwise the JDWP agent will be loaded twice and the JVM will fail to start.
            "console": "integratedTerminal",
            // Optional: set the java executable to your local JDK 21 if needed. If unset, VS Code default JDK is used.
            "javaExec": "/Library/Java/JavaVirtualMachines/amazon-corretto-21.jdk/Contents/Home/bin/java",
            "stopOnEntry": false,
            "env": {
                "OTEL_RESOURCE_ATTRIBUTES": "service.name=ADOT-Java-lkmain",
                "JAVA_TOOL_OPTIONS": " -javaagent:./otelagent/build/libs/aws-opentelemetry-agent-2.18.0-SNAPSHOT.jar",
                // "AWS_LAMBDA_FUNCTION_NAME": "Great-Lambda-Fn-XXX",
                "OTEL_JAVAAGENT_DEBUG": "true",
                "OTEL_LOG_LEVEL": "debug",
                "OTEL_METRICS_EXPORTER": "none",
                // "OTEL_LOGS_EXPORTER": "none",
                // "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318",
                "OTEL_EXPORTER_OTLP_TRACES_ENDPOINT": "http://127.0.0.1:4318/v1/traces",
                // "OTEL_METRIC_EXPORT_INTERVAL": "2000",
                // "OTEL_EXPORTER_OTLP_PROTOCOL": "http/json",
                "OTEL_EXPORTER_OTLP_PROTOCOL": "http/protobuf",
                "OTEL_TRACES_SAMPLER": "always_on",
                "OTEL_TRACES_SAMPLER_ARG": "endpoint=http://localhost:2000",
                "OTEL_AWS_APPLICATION_SIGNALS_ENABLED": "true",
                "OTEL_AWS_APPLICATION_SIGNALS_EXPORTER_ENDPOINT": "http://localhost:4316/v1/metrics",
                // "OTEL_INSTRUMENTATION_COMMON_DEFAULT_ENABLED": "true",
                // "OTEL_INSTRUMENTATION_SERVLET_ENABLED": "true",
                // "OTEL_INSTRUMENTATION_TOMCAT_ENABLED": "true",
            },
            "cwd": "${workspaceFolder}",
        },
        {
            // non-suspending
            // java -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005 \
            // -jar sample-apps/springboot/build/libs/springboot-2.18.0-SNAPSHOT.jar
            // suspend
            // java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005 \
            // -jar sample-apps/springboot/build/libs/springboot-2.18.0-SNAPSHOT.jar
            "type": "java",
            "name": "Attach to Spring Boot (remote)",
            "request": "attach",
            "hostName": "127.0.0.1",
            "port": 5005,
            "projectName": "sample-apps-springboot"
        }
    ]
}